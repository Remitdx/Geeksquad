<div class="container py-5">
  <h1>All GeekSquad :</h1>
  <ul>
    <% @events.each do |event|  %>
        <li>
          <%= link_to "Geeksquad n°#{event.id} à #{event.lieu}", event_path(event) %>
          <%= link_to "Update", edit_event_path(event), class:"btn btn-warning"%>
          <%= link_to "Delete", event_path(event), method: :delete,
                                                data: {confirm: "Are you sure"},
                                                class:"btn btn-danger"%>
        </li>
    <% end %>
  </ul>

  <h1>Créer le prochain event!</h1>
  <%= render "form", event: @event %>
</div>
